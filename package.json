{
    "name": "obsidian-journal-bases",
    "version": "1.7.0",
    "description": "Custom Base views for journaling and periodic reviews",
    "author": {
        "name": "SÃ©bastien Dubois",
        "email": "sebastien.dubois@gmail.com",
        "url": "https://dsebastien.net"
    },
    "keywords": [
        "obsidian",
        "obsidian-plugin",
        "periodic-notes",
        "journal",
        "bases"
    ],
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsebastien/obsidian-journal-bases.git"
    },
    "bugs": {
        "url": "https://github.com/dsebastien/obsidian-journal-bases/issues"
    },
    "homepage": "https://github.com/dsebastien/obsidian-journal-bases",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.1.0"
    },
    "main": "main.js",
    "packageManager": "bun@1.3.2",
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "scripts": {
        "dev": "bun scripts/build.ts",
        "build": "bun run tsc && bun scripts/build.ts --prod",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "bun run tsc:watch",
        "lint": "eslint .",
        "lint:strict": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "bun test",
        "prepare": "husky",
        "commit": "cz",
        "cm": "cz",
        "commit:lint": "commitlint --edit",
        "release:update-version": "bun scripts/update-version.ts",
        "release:version-bump": "bun scripts/version-bump.ts",
        "release:changelog": "bun scripts/generate-changelog.ts",
        "release:zip": "bun scripts/create-release-zip.ts"
    },
    "devDependencies": {
        "@commitlint/cli": "20.2.0",
        "@commitlint/config-conventional": "20.2.0",
        "@eslint/js": "9.39.2",
        "@tailwindcss/cli": "4.1.18",
        "@types/bun": "latest",
        "commitizen": "4.3.1",
        "conventional-changelog-cli": "5.0.0",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cz-customizable": "7.5.1",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-obsidianmd": "0.1.9",
        "globals": "17.0.0",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "obsidian": "latest",
        "prettier": "3.7.4",
        "tailwindcss": "4.1.18",
        "typescript": "5.9.3",
        "typescript-eslint": "8.49.0"
    },
    "dependencies": {
        "date-fns": "4.1.0",
        "immer": "11.0.1",
        "zod": "4.1.13"
    }
}
